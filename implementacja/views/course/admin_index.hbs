<div class="container-fluid">
    <div class="row my-4 mx-auto text-center">
        <p align="right">Jesteś zalogowany jako <b>{{ login }} <a href="/users/logout" class="btn btn-dark">Wyloguj się</a></b></p>
        <p align="left"><a href="/admin" class="btn btn-info">Powrót do głównego panelu admina</a></p>
    </div>
    <div class="row my-4 mx-auto text-center">
        <h1><b>PANEL ADMINA</b></h1>
        <h3><b>Zarządzanie prowadzonymi kursami</b></h3>
    </div>
    <div class="row my-4 mx-auto text-center">
        <form action="/courses/admin/add" method="get">
            <button class="btn btn-primary" type="submit">Dodaj kurs</button>
        </form>
    </div>
    <div class="row my-4 mx-auto text-center">
        <p align="left"><b>Lista prowadzonych kursów</b></p>
        <table class="table">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Oznaczenie</th>
                    <th scope="col">Kategoria</th>
                    <th scope="col">Aktualizacja danych</th>
                    <th scope="col">Usuwanie kursu</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <td>{{this.oznaczenie}}</td>
                    <td>{{this.kategoria}}</td>
                    <td><a href="/courses/admin/update/{{this.id}}" class="btn btn-info btn-sm">Update</a></td>
                    <td><form action="/courses/admin/delete" method="post" style="display: inline;">
                        <button class="btn btn-danger btn-sm" type="submit" name="id" id="{{this.id}}" value="{{this.id}}">Delete</button>
                    </form></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        
    </div>
</div>