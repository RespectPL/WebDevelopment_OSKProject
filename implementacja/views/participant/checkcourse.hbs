<div class="container-fluid">
    <div class="row my-4 mx-auto text-center">
        <p align="right">Jesteś zalogowany jako <b>{{ login }} <a href="/users/logout" class="btn btn-dark">Wyloguj się</a></b></p>
        <p align="left"><a href="/participants" class="btn btn-info">Powrót do głównego panelu kursanta</a></p>
    </div>
    <div class="row my-4 mx-auto text-center">
        <h1><b>PANEL KURSANTA</b></h1>
        <h5><b>Uczęszczane kursy</b></h5>
    </div>
    <div class="row my-4 mx-auto text-center">
        <table class="table">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Kategoria</th>
                    <th scope="col">Stan płatności</th>
                    <th scope="col">Stan kursu</th>
                    <th scope="col">Zapłać za kurs</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <td>{{this.kurs}}</td>
                    <td>{{#if this.paid}}<font color="green">Zapłacone</font>{{else}}<font color="red">Niezapłacone</font>{{/if}}</td>
                    <td>{{#if this.completed}}<font color="green">Zakończony</font>{{else}}W trakcie{{/if}}</td>
                    <td>{{#if this.paid}}<button class="btn btn-success btn-sm disabled">Pay course</button>
                        {{else}}<form action="/participants/course/pay" method="post" style="display: inline;">
                        <button class="btn btn-success btn-sm" type="submit" name="id" id="{{this.id}}" value="{{this.id}}">Pay course</button>
                    </form>
                        {{/if}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>