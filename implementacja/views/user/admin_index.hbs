<div class="container-fluid">
    <div class="row my-4 mx-auto text-center">
        <p align="right">Jesteś zalogowany jako <b>{{ login }} <a href="/users/logout" class="btn btn-dark">Wyloguj się</a></b></p>
        <p align="left"><a href="/admin" class="btn btn-info">Powrót do głównego panelu admina</a></p>
    </div>
    <div class="row my-4 mx-auto text-center">
        <h1><b>PANEL ADMINA</b></h1>
        <h3><b>Zarządzanie użytkownikami</b></h3>
    </div>
    <div class="row my-4 mx-auto text-center">
        <p align="left"><b>Lista zarejestrowanych użytkowników</b></p>
        <table class="table">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Login</th>
                    <th scope="col">Email</th>
                    <th scope="col">Rola</th>
                    <th scope="col">Usuwanie użytkownika</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <td>{{this.login}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.rola}}</td>
                    <td>{{#ifCond this.rola "administrator"}}
                        <button class="btn btn-danger btn-sm disabled">Delete</button>
                        {{else}}
                        <form action="/users/admin/delete" method="post" style="display: inline;">
                            <button class="btn btn-danger btn-sm" type="submit" name="id" id="{{this.id}}" value="{{this.id}}">Delete</button>
                        </form>
                        {{/ifCond}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        
    </div>
</div>